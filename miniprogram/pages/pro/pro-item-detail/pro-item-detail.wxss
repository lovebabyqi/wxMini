.detail-container{
    width:100vw;
    height:100vh;
    box-sizing: border-box;
    padding:20rpx;
    background-color: #eee;
}
.content{
    padding:0 40rpx 0 20rpx;
    background-color: #fff;
}
.d-item{
    display:flex;
    justify-content: space-between;
    width: 100%;
    height:160rpx;
    box-sizing: border-box;
    font-weight:bold;
    line-height: 160rpx;
    border-bottom:1rpx solid #eee;
}
.d-img{
    margin-top:20rpx;
    width:120rpx;
    height:120rpx;
}
.d-title{
    flex:1;
    padding-left:20rpx;
    text-align:left;
}