.pro-item{
    position:relative;
    width:100%;
    height:120rpx;
    background-color: #fff;
    box-sizing:border-box;
    padding:30rpx;
    border:1rpx solid #eee;
    border-radius:20rpx;
    font-weight:bold;
    font-size:32rpx;
    margin-bottom:20rpx;
}
.pro-item .img{
    width:80rpx;
    height:80rpx;
    position:absolute;
    top:50%;
    transform:translateY(-50%);
}
.pro-item .title{
    position:absolute;
    display:inline-block;
    padding-left:120rpx;
    line-height:60rpx;
}
.pro-item .right{
    position:absolute;
    top:50%;
    transform:translateY(-50%);
    font-size:40rpx;
    right:40rpx;
    color:#ccc;
}